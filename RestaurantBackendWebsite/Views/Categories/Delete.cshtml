@model RestaurantBackendWebsite.Models.ViewModels.CategoryVM

@{
    ViewBag.Title = "刪除分類";
}

<h2>刪除分類</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>





    </dl>

    @using (Html.BeginForm("Delete", "Categories", FormMethod.Post, new { id = "form1" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-end">
            <input onclick="showAlert()" type="button" value="刪除" class="btn btn-primary" />
            @Html.ActionLink("回到清單頁", "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
@section css {
    <style>
        .alert {
            height: 65px;
        }
    </style>
}
@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const showAlert = () => {
            Swal.fire({
                title: '你確定嗎?',
                text: "您將無法恢復此筆餐點資料!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '是的，確定刪除!',
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {

                    var form = document.getElementById("form1");
                    form.submit();


                }
            });
        }

    </script>
}
